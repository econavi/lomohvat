.page-main
	&__title
		background #000 url('../assets/img/general/bg-metal.jpg')

		+above($desktop)
			padding 4% 0

	&__title-inner
		container()
		paddingSection()
		text-align center
		background rgba(0,0,0,0.8)
		color #fff


	&__services
		paddingSection()
		background #eaeaea url('../assets/img/general/bg-gray.png')
	
	&__services-inner
		container()
		text-align center


	&__prices
		paddingSection()
		background #333 url('../assets/img/general/bg-dark.png')
	
	&__prices-inner
		color #fff
		text-align center
		padding-right 3%
		padding-left 3%


	&__rules
		paddingSection()
		padding-bottom 0
		background #eaeaea url('../assets/img/general/bg-gray.png')
	
	&__rules-inner
		container()
		text-align center
		padding 0 10px
		padding-bottom 30px
		border-bottom 2px solid lightgrey


	&__advantages
		paddingSection()
		background #eaeaea url('../assets/img/general/bg-gray.png')
		
	&__advantages-inner
		container()
		text-align center
		padding 0 20px
		padding-bottom 30px
		border-bottom 2px solid lightgrey
	

	&__trust
		paddingSection()
		padding-top 0
		background #eaeaea url('../assets/img/general/bg-gray.png')

	&__trust-inner
		container()
		text-align center

	
	&__form
		paddingSection()
		padding-top 0
		background #eaeaea url('../assets/img/general/bg-gray.png')
	
	&__form-inner
		container()
		padding 0 2%
		padding-top 30px
		padding-bottom 50px
		background #333 url('../assets/img/general/bg-dark.png')
		text-align center
		color #fff
		
		+above($tablet)
			padding-right 10%
			padding-left 10%
			font-size 2rem
		

	&__addresses
		paddingSection()
		background #eaeaea url('../assets/img/general/bg-gray.png')
		
	&__addresses-inner
		container()
		padding-right 10px
		padding-left 10px
		text-align center


	&__maps-item
		clearfix()
		margin-bottom 10%


















