.list-services
	center()
	list-style none
	text-align center
	font-size 0
	
	&__item
		display inline-block
		vertical-align top
		padding 5% 2%
		margin-bottom 5%
		outline 2px solid #92b0c3
		outline-offset -2px
		font-size 1.4rem
		font-weight 700
		text-align center
		
		&:last-child
			margin-bottom 0
		
		+above($desktop)
			margin-right 2%
			font-size 1.6rem
			padding 3% 1%
		
			&:last-child
				margin-right 0
		
		
	&__item-pic
		padding 4% 0
		width 60%
		center()
		