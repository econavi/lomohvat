@keyframes form-shake {
	0%, 100% {
		transform translateX(0)
	}
	
	10%, 70% {
		transform translateX(-10px)
	}
	
	30% {
		transform translateX(10px)
	}
	
}

@keyframes form-send-correct
	for i in 0..10
		{10% * i}
			opacity (i/10)


.form
	position relative
	width 100%
	padding-top 6%
	padding-right 10%
	padding-bottom 10%
	padding-left 10%
	background #000
	
	&_validation_error
		animation-name form-shake
		animation-duration 0.2s
	
	&_send-correct
		&::after
			content 'Заявка отправлена!'
			position absolute
			top 0
			right 0
			bottom 0
			left 0
			z-index 1
			padding 20% 5% 0 5%
			background green
			background rgba(0, 102, 0, 0.9)
			color #fff
			font-size 4rem
			font-weight 700
			animation-name form-send-correct
			animation-duration 0.2s
			
	

	&__title
		margin-bottom 5%
		font-size 1.4rem
		color #fff
		text-align center
		
		+above($tablet)
			font-size 1.6rem
		
		+above($desktop)
			font-size 1.8rem
		
		+above($tv)
			font-size 2rem
	
	
	&__input
		margin-bottom 5%
		width 100%
	
	
	&__btn
		width 100%
		







	